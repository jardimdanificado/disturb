ffi_bind_all = (path, ...sigs){
  h = ffi.open(path);
  if (h == null) { return null; }
  api = { __lib = h };
  each(sig in sigs) {
    head = sig.split("(")[0].trim();
    parts = head.split(" ");
    name = (parts[parts.size - 1].split("!")[0] + "");
    ptr = ffi.sym(h, name);
    if (ptr == null) { return null; }
    api[name] = ffi.bind(ptr, sig);
  }
  return api;
};

fail = 0;

load_fixture = (path){
  return ffi_bind_all(path,
    "i32 call_cb_i32(void*, i32, i32)",
    "i32 fold_cb_i32(void*, i32, i32)",
    "f64 call_cb_f64(void*, f64, f64)"
  );
};

